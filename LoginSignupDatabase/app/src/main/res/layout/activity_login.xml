<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sambovisal.loginsignupdatabase.LoginActivity">

    <include layout="@layout/toobar_app" android:id="@+id/login_toolbar"/>
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="28dp"
        android:text="Login Your Account"
        android:textSize="22dp"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/login_toolbar"
        android:layout_alignParentStart="true" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:id="@+id/log_User"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/log_pass"
        android:hint="Password"
        android:layout_below="@+id/log_User"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp" />

    <Button
        android:id="@+id/log_acc_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/log_pass"
        android:layout_marginEnd="31dp"
        android:layout_marginTop="42dp"
        android:background="@android:color/holo_blue_bright"
        android:text="Login"
        android:textColor="@android:color/black" />


</RelativeLayout>
