<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.sambovisal.mainmenu.AboutActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_setting"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="80dp"
        android:paddingStart="0dp"
        android:src="@drawable/pisal" />

    <TextView
        android:id="@+id/display_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Sambo Visal"
        android:textColor="@android:color/white"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/about1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="He is 19 years old. He is studying at KIT that located on Kirirom Mountain"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_below="@+id/display_name"
        android:layout_alignParentStart="true"
        android:layout_marginStart="22dp" />

    <Button
        android:id="@+id/back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/about1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:text="Back Menu" />


</RelativeLayout>
