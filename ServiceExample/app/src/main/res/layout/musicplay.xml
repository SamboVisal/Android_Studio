<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/layout_component"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/layout_music"
            >

            <Button
                android:id="@+id/prev_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="105dp"
                android:text="Prev" />

            <Button
                android:id="@+id/play_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Play"
                android:layout_alignBaseline="@+id/prev_btn"
                android:layout_alignBottom="@+id/prev_btn"
                android:layout_toEndOf="@+id/prev_btn" />

            <Button
                android:id="@+id/next_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next"
                android:layout_above="@+id/pause_btn"
                android:layout_toEndOf="@+id/play_btn" />

            <Button
                android:id="@+id/pause_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Pause"
                android:layout_below="@+id/play_btn"
                android:layout_centerHorizontal="true" />

            <Button
                android:id="@+id/stop_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/pause_btn"
                android:layout_alignBottom="@+id/pause_btn"
                android:layout_toStartOf="@+id/pause_btn"
                android:text="stop" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_music"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_alignParentTop="true"
            >

            <TextView
                android:id="@+id/song_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="TextView"
                android:textSize="35sp" />
        </RelativeLayout>


</RelativeLayout>